{
  "manifest_version": 3,
  "name": "AutoUMS",
  "author": "https://github.com/alanJames00",  
  "description": "Automate LPU UMS portal.",
  "version": "1.0",
  "icons": {
    "16": "images/icon-16.png",
    "32": "images/icon-32.png",
    "48": "images/icon-48.png",
    "128": "images/icon-128.png"
  },
  "action": {
    "default_popup": "popup.html",
    "default_title": "AutoMate LPU UMS portal"
  },
  "permissions": [ "activeTab","scripting" ],
  "content_scripts": [
    {
      "js": [
        "scripts/content.js"
      ],
      "matches": [
        "https://internet.lpu.in/24online/*"]
    }
  ]
}